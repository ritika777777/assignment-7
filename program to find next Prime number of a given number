#include<stdio.h>
#include<conio.h>
int main()
{
    int n,i,c;
    printf("enter a number");
    scanf("%d",&n);
    while(1)
    {   n+=1;
        c=0;
        for(i=2;i<n;i++)
        {
          if(n%i==0)
            {
               c++;
                break;
            }
        }
        if(c==0)
        {
            printf("%d ",n);
            break;
        }

    }
     getch();
}
